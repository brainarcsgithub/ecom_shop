<%= form_for(@order) do |f| %>

<p>
	<%= f.label :date %>
	<%= f.date_field :date %>
</p>

<p>
	<%= f.label :customer_id %>
	<%= f.text_field :customer_id%>
</p>

<p>
	<%= f.label :name %>
	<%= f.text_field :name%>
</p>

<p>
	<%= f.label :email %>
	<%= f.text_field :email%>
</p>

<p>
	<%= f.label :address %>
	<%= f.text_field :address%>
</p>

<p>
	<%= f.label :pay_method %>
	<%= f.text_field :pay_method%>
</p>

<p>
	<%= f.submit%>
</p>

<% end %>